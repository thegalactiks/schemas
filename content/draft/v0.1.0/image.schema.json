{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.galactiks.com/content/draft/v0.1.0/image.schema.json",
    "title": "Image",
    "description": "https://schema.org/Image",
    "type": "object",
    "required": [
        "contentUrl"
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "contentUrl": {
            "type": "string"
        },
        "datePublished": {
            "type": "string",
            "format": "date-time"
        },
        "author": {
            "type": "string"
        },
        "contentLocation": {
            "type": "string"
        }
    }
}